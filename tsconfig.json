{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": ["./resources/types"],
        "baseUrl": ".",
        "paths": {
            "/@/*": ["resources/js/*"],
            "/#/*": ["resources/types/*"]
        },
        "types": ["vite/client"],
        "lib": ["esnext", "dom"]
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.tsx",
        "resources/js/**/*.vue",
        "resources/types/**/*.d.ts",
        "vite.config.ts",
        "build/**/*.ts",
        "build/**/*.d.ts",
    ]
}
